<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_padding"
        android:elevation="@dimen/elevation"
        card_view:cardCornerRadius="@dimen/cardCornerRadius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/topPadding"
            android:layout_marginLeft="@dimen/horizontalMargin"
            android:layout_marginRight="@dimen/horizontalMargin"
            android:layout_marginTop="@dimen/topPadding">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_contacts"
                android:layout_width="@dimen/contactsIconDimen"
                android:layout_height="@dimen/contactsIconDimen"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textview_contacts_airportname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/imageview_contacts"
                android:layout_toRightOf="@id/imageview_contacts"
                android:gravity="center"
                android:layout_marginLeft="@dimen/horizontalMargin"
                android:layout_marginStart="@dimen/horizontalMargin"
                android:paddingBottom="@dimen/horizontalMargin"
                android:paddingTop="@dimen/topPadding"
                android:textSize="@dimen/normalTextSize" />

            <TextView
                android:id="@+id/textView_contacts_phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontalMargin"
                android:layout_marginStart="@dimen/horizontalMargin"
                android:layout_below="@id/textview_contacts_airportname"
                android:layout_toEndOf="@id/imageview_contacts"
                android:layout_toRightOf="@id/imageview_contacts"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="@color/detailTextColor"
                android:textSize="@dimen/normalTextSize"
                android:paddingBottom="@dimen/topPadding"
                android:paddingEnd="@dimen/horizontalMargin"
                android:paddingLeft="@dimen/horizontalMargin"
                android:paddingRight="@dimen/horizontalMargin"
                android:paddingStart="@dimen/horizontalMargin" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
